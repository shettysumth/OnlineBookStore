

<div class="login-box">
    <h2>Login</h2>
    <form method="post">
        <div class="user-box">
            <input type="text" name="txtemail" required="">
            <label>UserEmail</label>
        </div>
        <div class="user-box">
            <input type="password" name="txtpass" required="">
            <label>Password</label>
        </div>
       
        <br />         <div style="position:center; color:white">@Html.ValidationSummary(true)</div>
    </form>
  <input type="button" id="btn" value="Back To Home" onclick="location.href='@Url.Action("Index", "Store")'" />
</div>

